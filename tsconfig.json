{
  "compilerOptions": {
    // ðŸ‘‡ esnext vs es2015 the difference is that import() expressions are understood in esnext, but not in es2015
    "target": "esnext",
    "module": "esnext",
     // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    // ðŸ‘‡ https://www.typescriptlang.org/docs/handbook/decorators.html
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
